@model E_CommerceFIdentityScaff.Models.Company

@{
    ViewData["Title"] = "Create";
}



<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Company</h2>
            <hr />
        </div>

        <div class="mb-3 row">
            <label class="p-0">Company Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label class="p-0">Number</label>
            <input asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label class="p-0">StreetAddress</label>
            <input asp-for="StreetAddress" class="form-control" />
            <span asp-validation-for="StreetAddress" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>

            <div class="col-6 col-md-3">
                <a asp-action="Index" class="btn btn-outline-secondary form-control">Back</a>
            </div>
        </div>

    </div>



</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
        // client side
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}