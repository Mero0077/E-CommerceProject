@model ProductVM

<div class="card border-0 shadow mt-4">
    <div class="card-header bg-gradient bg-primary text-white py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">Create Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form asp-action="Create" enctype="multipart/form-data" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- First Column -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Product.Title" class="form-label"></label>
                    <input asp-for="Product.Title" class="form-control" />
                    <span asp-validation-for="Product.Title" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Description" class="form-label"></label>
                    <textarea asp-for="Product.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.ISBN" class="form-label"></label>
                    <input asp-for="Product.ISBN" class="form-control" />
                    <span asp-validation-for="Product.ISBN" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Author" class="form-label"></label>
                    <input asp-for="Product.Author" class="form-control" />
                    <span asp-validation-for="Product.Author" class="text-danger small"></span>
                </div>
            </div>

            <!-- Second Column -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Product.ListPrice" class="form-label"></label>
                    <input asp-for="Product.ListPrice" class="form-control" />
                    <span asp-validation-for="Product.ListPrice" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Price" class="form-label"></label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Price50" class="form-label"></label>
                    <input asp-for="Product.Price50" class="form-control" />
                    <span asp-validation-for="Product.Price50" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Price100" class="form-label"></label>
                    <input asp-for="Product.Price100" class="form-control" />
                    <span asp-validation-for="Product.Price100" class="text-danger small"></span>
                </div>
            </div>

            <!-- Full Width Row -->
            <div class="col-12">
                <div class="mb-3">
                    <label asp-for="Product.CategoryId" class="form-label"></label>
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger small"></span>
                </div>
            </div>

            <div class="col-12">
                <div class="mb-3">
                    <label class="form-label">Product Image</label>
                    <input type="file" name="imageFile" class="form-control" />
                </div>
            </div>

            <!-- Buttons -->
            <div class="col-12">
                <div class="row mt-4">
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100 py-2">
                            <i class="bi bi-plus-circle me-2"></i>Create
                        </button>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Index" class="btn btn-outline-secondary w-100 py-2">
                            <i class="bi bi-arrow-left me-2"></i>Back
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

